{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["es2022", "dom", "dom.iterable"],
		"module": "esnext",
		"strict": true,
		"jsx": "react-jsx",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"paths": {
			"@/*": ["./src/*"],
			"@koukoku/*": ["../../koukokua/src/*"]
		}
	},
	"include": ["src", "vite.config.ts"],
	"exclude": ["node_modules", "dist"]
}
